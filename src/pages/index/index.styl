.menu
  font-size 38px
  display flex
  flex-direction row
  justify-content space-between
  line-height 40px
  padding 20px
  font-weight: 600

.header
  text-align center
  color #fff
  display flex
  align-items center
  .title
    width 64%
    color: #fff

.title
  font-size 36px
  color: #3366aa;

.aside
  position fixed
  z-index 10
  left: 0
  top: 0
  height 100%
  width 100%
  background rgba(0,0,0,.2)
  transition transform .2s linear;
  &.hide
    transform translate3d(-750px, 0, 0)
  .inner
    background #fff
    width 70%
    height 100%
    position relative
    overflow hidden
  .aside-tool
    display: flex;
    margin: 0 30px 30px 30px;
    justify-content: space-between;
    font-size 34px
    .btn-cn
      color: #000;
  .category
    font-size 36px
    display flex
    padding 0 20px
    align-items center
    border-bottom 2px solid #e9e9e9
    color #1c1c36
    margin-top: 10px
    &.topic
      padding 30px 0 30px 60px
    &.on
      color #fff
      font-weight: 600
    image
      width 60px
      height 60px
    text
      margin-left 20px
    .check
      margin-left: auto;
  .footer
    position: absolute
    bottom 30px
    left 30px
  .subscribe-tip
    color red
  .subscribe
    display flex
    align-items: center
    .tip
      margin-left 20px
      .time
        color red