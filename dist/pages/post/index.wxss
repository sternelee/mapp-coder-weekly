.post {
  width: 100%;
  overflow-x: hidden;
}
.post .title {
  color: #fff;
}
.post .title text {
  border-bottom: 1rpx solid #ddd;
}
.header {
  text-align: center;
  color: #fff;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.header .title {
  width: 64%;
}
.content {
  padding: 0 20rpx;
}
.content image {
  width: 100%;
  margin-top: 10rpx;
}